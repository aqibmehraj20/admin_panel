{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid content-top-gap ">

        {{ form_start(form) }}

        <div class="card card_border  mb-4">
            <div class="cards__heading">
                <h3>Create Category <span></span></h3>
                <div class="form-group row mt-3">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary btn-style">Save</button>
                        <button type="button" class="btn btn-danger btn-style" onClick="window.history.back();">cancel
                        </button>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    {% for label, messages in app.flashes(['warning', 'danger','success']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                {% if label == 'success' %}
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                {% elseif label == 'danger' %}
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                {% else %}
                                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                                {% endif %}
                                {{ message }} !
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
            <div class="card-body">
                <div class="form-group row ml-2">
                    <label for="inputType" class="col-sm-2 col-form-label input__label">Category Name</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.category_name, {'attr': {'class': 'form-control input-style'}}) }}
                    </div>
                </div>
                <div class="form-group row ml-2">
                    <label for="inputType" class="col-sm-2 col-form-label input__label">Category Type</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.category_type, {'attr': {'class': 'form-control input-style'}}) }}
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}